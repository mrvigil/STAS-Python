snowman3=[
'       _________        ' ,
'      /         \       ' ,
'      |  x   x  |      ' ,
'      |    v    |    ' ,
'  /-  \_________/ --\   ',
'    \ /    O    \/      ' ,
'      |    O    |      ' ,
'      |    O    |      ' ,
'      \_________/       ']
snowmen=[snowman1, snowman2, snowman3]
import time
print()
for q,a in jokes.items():
  for x in range(0,len(snowmen)):
    for y in range(0, len(snowmen[x])):
      if x==0 and y==1:
        print(snowmen[x][y],q)
      elif x==1 and y==3:
        print(snowmen[x][y],a)
      else:
        print(snowmen[x][y])
    time.sleep(1)
    print('\033c')
  time.sleep(1)